
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@model List<test_orcl.Models.MedicalRecord>

@{
    ViewBag.Title = "Lịch sử khám bệnh";
}

<h2>Lịch sử khám bệnh của bệnh nhân</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ngày khám</th>
            <th>Chuẩn đoán</th>
            <th>Điều trị</th>
            <!-- Thêm các cột khác nếu cần -->
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.VisitDate.ToShortDateString()</td>
                <td>@record.Diagnosis</td>
                <td>@record.Treatment</td>
                <!-- Hiển thị các thông tin khác của lịch sử khám bệnh -->
            </tr>
        }
    </tbody>
</table>

